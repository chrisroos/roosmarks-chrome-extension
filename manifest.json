{
  "name": "Roosmarks",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Easy access to Roosmarks.",
  "icons": { "48":  "images/icon48.png",
             "128": "images/icon128.png" },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png"
    },
    "default_popup": "popup.html",
    "default_title": "Roosmarks"
  },
  "permissions": [
    "https://roosmarks.herokuapp.com/",
    "tabs"
  ]
}